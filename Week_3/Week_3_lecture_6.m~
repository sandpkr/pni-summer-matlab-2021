%%% this is the code for week 3 lecture 6
clear
clc

%% if statement
number=0;

if number==0
    disp('number is zero')
else
    disp('number is not zero')
end

%% if and elseif statement
clc

num2=10;  %% try NaN, Inf, -Inf

if num2>0
    disp('positive number')
elseif num2<0
    disp('negative number')
else
    disp('zero')
end

%% while loop increasing increment

itr=1;
while itr<5
    disp(['current iteration is: ' num2str(itr)])
    itr=itr+1;
end

%% while loop decreasing increment
clc

itr=10;
while itr>1
    disp(['current iteration is: ' num2str(itr)])
    itr=itr-1;
end

%% while loop in different incremental steps
clc

itr=1;
while itr<10
    disp(['current iteration is: ' num2str(itr)])
    itr=itr+2;
end

%% combine while loop and if loop
clc

array=[-5 -2 -5 -4 4 2 -2 5 0 -1];

i=1;
while i<11
    test_num=array(1,i);
    if test_num>0
        disp([num2str(test_num) ' is a positive integer'])
    elseif test_num<0
        disp([num2str(test_num) ' is a negative integer'])
    else
        disp([num2str(test_num) ' is zero'])
    end
    i=i+1;
end



